  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.x",
    "eslint-config-airbnb-base": "^15.x",
    "eslint-plugin-import": "^2.x",
    "hint": "^6.x",
    "prettier": "^2.x",
    "stylelint": "^14.x",
    "stylelint-config-recommended": "^7.x",
